{
  "name": "dotty",
  "displayName": "Dotty Language Server",
  "description": "IDE integration for Dotty, the experimental Scala compiler",
  "version": "0.1.5",
  "license": "BSD-3-Clause",
  "publisher": "lampepfl",
  "repository": {
    "type": "git",
    "url": "https://github.com/lampepfl/dotty.git"
  },
  "icon": "images/dotty-logo.png",
  "engines": {
    "vscode": "^1.26.0"
  },
  "categories": [
    "Languages"
  ],
  "keywords": [
    "scala",
    "dotty",
    "jvm",
    "language-server"
  ],
  "main": "./out/src/extension",
  "activationEvents": [
    "onLanguage:scala",
    "workspaceContains:.dotty-ide.json"
  ],
  "languages": [
    {
      "id": "scala",
      "extensions": [
        ".scala"
      ],
      "aliases": [
        "Scala"
      ]
    }
  ],
  "contributes": {
    "configurationDefaults": {
      "[scala]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  },
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "vscode:prepublish": "npm install && ./node_modules/.bin/tsc -p ./",
    "compile": "./node_modules/.bin/tsc -p ./",
    "test": "node ./node_modules/vscode/bin/test",
    "postinstall": "node ./node_modules/vscode/bin/install && curl -L -o out/coursier https://github.com/coursier/coursier/raw/v1.0.3/coursier"
  },
  "extensionDependencies": [
    "daltonjorge.scala"
  ],
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "vscode-languageclient": "^5.0.1",
    "vscode-languageserver": "^5.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.28",
    "typescript": "^2.9.2",
    "vscode": "^1.1.21"
  }
}
