#!/usr/bin/env bash
set -e

# Usage:
# ./sbt <cmd>

CMD="${1:?Missing sbt command}"

# run sbt with the supplied arg
sbt -J-XX:ReservedCodeCacheSize=512m \
    -DSBT_PGP_USE_GPG=false \
    -no-colors \
    -Ddevelocity.internal.cache.verbose=true \
    -Ddevelocity.internal.cache.defaultLogLevel=info \
    "$CMD"
